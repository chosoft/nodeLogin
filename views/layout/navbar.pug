header
    div(class="wp-top")
        nav
            div(class="wp-profile")
                img(src=img, alt="User Image")
                span= user
            div(class="wp-btn-menu" id="menu")
                img(src="icons/menu.svg")
    div(class="wp-bottom" id="menu-display")
        div(class="wp-title")
            h2 Menu
        div(class="middle-bar")
            div(class="bar")
        div(class="nav-links")
            nav
                a(href="/modelos")
                    img(src="icons/group.svg", alt="") 
                    p Modelos
                a(href="/documentos")
                    img(src="icons/document.svg", alt="") 
                    p Archivos
                a(href="/correos")
                    img(src="icons/correo-electronico.svg", alt="") 
                    p Correos
                if role === 'admin'
                    a(href="/usuarios")
                        img(src="icons/usuario.svg", alt="") 
                        p Usuarios
                else

                a(href="/configuracion")
                    img(src="icons/engranaje.svg", alt="") 
                    p Configuracion
                a(id="logout")
                    img(src="icons/salida.svg", alt="") 
                    p Salir